<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Logo UTFPR -->
        <ImageView
            android:id="@+id/ivLogoUtfpr"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/about_logo_description"
            android:src="@drawable/logo_utfpr"
            android:scaleType="centerInside" />

        <!-- Nome da Universidade -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_university"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:textAlignment="center" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="20dp" />

        <!-- Informações do Desenvolvedor -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_developer_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="12dp" />

        <!-- Nome do Aluno -->
        <TextView
            android:id="@+id/tvNomeAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_developer_name"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Curso -->
        <TextView
            android:id="@+id/tvCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_course"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- E-mail -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_email"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:autoLink="email" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="20dp" />

        <!-- Descrição do App -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_app_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDescricaoApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_app_description"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:textAlignment="textStart" />

        <!-- Footer com versão -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_copyright"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
