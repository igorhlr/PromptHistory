<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/content_padding_top"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Label e EditText para Texto do Prompt -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_text"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTextoPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_prompt_text"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top|start"
            android:layout_marginBottom="16dp" />

        <!-- Label e EditText para Tags -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_tags"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_tags"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Label para Categoria -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_category"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Spinner para Categoria -->
        <Spinner
            android:id="@+id/spCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Label para Prioridade -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_priority"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- RadioGroup para Prioridade -->
        <RadioGroup
            android:id="@+id/rgPrioridade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbAlta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority_high"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/rbMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority_medium"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/rbBaixa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority_low"
                android:layout_weight="1" />

        </RadioGroup>

        <!-- Label para Opções -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_options"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- CheckBoxes -->
        <CheckBox
            android:id="@+id/cbFavorito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_favorite"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/cbPublico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_public"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</ScrollView>